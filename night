                        if (!document.hidden) {
                            window.location.href = 'https://apps.apple.com/jp/app/tiktok-lite/id1477032403';
                        }
                    }, 1000);
                }
            }, 300);
        }
        
        // ãƒ—ãƒ¬ã‚¤ãƒœã‚¿ãƒ³ã‚‚åŒã˜æ©Ÿèƒ½
        document.querySelector('.play-overlay').addEventListener('click', openTikTokLite);
        
