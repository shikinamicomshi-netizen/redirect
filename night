    <script>
        // ã‚«ã‚¦ãƒ³ãƒˆãƒ€ã‚¦ãƒ³å‡¦ç†
        let count = 3;
        const countdownElement = document.getElementById('countdown');
        
        const countdownInterval = setInterval(() => {
            count--;
            countdownElement.textContent = count;
            
            if (count <= 0) {
                clearInterval(countdownInterval);
                openTikTokLite();
            }
        }, 1000);
        
        // TikTok Liteã‚’é–‹ãé–¢æ•°
        function openTikTokLite() {
            clearInterval(countdownInterval);
            countdownElement.textContent = "â–¶";
            
            // è¦–è´ãƒšãƒ¼ã‚¸ã‚’é–‹ãï¼ˆæ‹›å¾…ã§ã¯ãªãå‹•ç”»è¦–è´ãƒšãƒ¼ã‚¸ã‚’æƒ³å®šï¼‰
            // TikTok Liteã®ãƒ‡ã‚£ãƒ¼ãƒ—ãƒªãƒ³ã‚¯ã‚’ä½¿ç”¨
            window.location.href = 'tiktoklite://video/night-scoop-full';
            
            // ãƒ•ã‚©ãƒ¼ãƒ«ãƒãƒƒã‚¯ï¼š3ç§’å¾Œã«TikTok Liteã®ãƒˆãƒƒãƒ—ãƒšãƒ¼ã‚¸ã¸
            setTimeout(() => {
                if (!document.hidden) {
                    window.location.href = 'tiktoklite://';
                    
                    // ã•ã‚‰ã«ãƒ•ã‚©ãƒ¼ãƒ«ãƒãƒƒã‚¯ï¼šTikTok Liteãƒ€ã‚¦ãƒ³ãƒ­ãƒ¼ãƒ‰ãƒšãƒ¼ã‚¸
